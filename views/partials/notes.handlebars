<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

{{!-- Article Notes Container --}}
<div class="modal fade bottom" id="dialog-{{id}}" tabindex="-1" role="dialog">
    {{!-- Render All Model Data  --}}
    <div class="modal-dialog modal-full-height modal-bottom" role="document">
        {{!-- Article Notes Content Container --}}
        <div class="modal-content">
            {{!-- Article Notes Modal Title --}}
            <div class="card-footer bg-secondary border-white text-white font-weight-bold text-center">
                <h4>Showing Notes For Selected Article</h4>
            </div>
            {{!-- Header Container --}}
            <div class="modal-header">
                <h4 class="modal-title">
                    <a class="article-link" target="_blank" href="https://www.nytimes.com/{{link}}">{{title}}</a>
                </h4>
                {{!-- Article ID Number --}}
                <label class="text-muted float-right">Article ID: {{id}}</label>
            </div>
            {{!-- Body Container --}}
            <div class="modal-body p-5">
                {{!-- No Notes Fallback --}}
                <ul class="list-group note-container">
                    <li class="list-group-item">There aren't any notes for this article yet, be the first!</li>
                </ul>
                {{!-- Write Note Input --}}
                <ul class="list-group note-container mt-4">
                    <textarea class="p-2" placeholder="Add A Note - Share Your Opinions With the Community!" rows="6"
                        cols="40"></textarea>
                </ul>
            </div>
            {{!-- Modal Controls --}}
            <div class="modal-footer justify-content-center">
                {{!-- Hide Modal Button --}}
                <button type="button" class="btn btn-info waves-effect waves-light" data-dismiss="modal">
                    Hide Notes
                </button>
                {{!-- Post A Note Button --}}
                <button type="button" class="btn btn-primary waves-effect waves-light" data-dismiss="modal">
                    Post Note
                </button>
            </div>
        </div>
    </div>
</div>